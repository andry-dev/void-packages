# Template file for 'neovim-git'
pkgname=neovim-git
_currdate=$(date "+%Y.%m.%d")
version=0.5.${_currdate}
revision=2
wrksrc="neovim-nightly"
build_style=cmake
configure_args="-DENABLE_JEMALLOC=0 -DUTF8PROC_INCLUDE_DIR=/usr/include/libutf8proc"
hostmakedepends="pkg-config gperf LuaJIT lua51-lpeg lua51-mpack gettext"
makedepends="libtermkey-devel libuv-devel libvterm-devel msgpack-devel LuaJIT-devel libluv-devel libutf8proc-devel gettext-devel"
short_desc="Fork of Vim aiming to improve user experience, plugins and GUIs"
maintainer="andry-dev <peketribal2@gmail.com>"
license="Apache-2.0, custom:Vim"
homepage="https://neovim.io"
distfiles="https://github.com/neovim/neovim/archive/nightly.tar.gz>neovim-$(date "+%Y-%m-%d").tar.gz"
checksum=e82fae6d46bcafca18491d7fb7a49c208059ef20fa74c3797d51430ab8e606a6
provides="neovim-0.4.3_1"

alternatives="
 vi:vi:/usr/bin/nvim
 vi:vi.1:/usr/share/man/man1/nvim.1
 vi:view:/usr/bin/nvim
 vi:view.1:/usr/share/man/man1/nvim.1
 vim:vim:/usr/bin/nvim
 vim:vim.1:/usr/share/man/man1/nvim.1"

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qemu-user-static"
fi

pre_configure() {
	vsed -i runtime/CMakeLists.txt \
		-e "s|\".*/bin/nvim|\${CMAKE_CROSSCOMPILING_EMULATOR} &|g"
}

post_install() {
	vlicense LICENSE
}
