configure_args="-DOBS_VERSION_OVERRIDE=${version} -DENABLE_PIPEWIRE=ON -DBUILD_BROWSER=ON -DCEF_ROOT_DIR='../../cef_binary_4280_linux64' -DBUILD_VST=OFF"
hostmakedepends="pkg-config swig qt5-qmake qt5-host-tools"
makedepends="LuaJIT-devel fdk-aac-devel ffmpeg-devel glu-devel jack-devel
