# Template file for 'shim-signed'
pkgname=shim-signed
version=15.f8
revision=1
archs="x86_64"
wrksrc="boot"
hostmakedepends="rpmextract"
short_desc="Initial UEFI bootloader that handles chaining to a trusted full bootloader under secure boot environments"
maintainer="andry-dev <peketribal2@gmail.com>"
license="BSD"
homepage="https://apps.fedoraproject.org/packages/shim"
distfiles="https://kojipkgs.fedoraproject.org/packages/shim-signed/15/2/x86_64/shim-x64-15-2.x86_64.rpm"
checksum=fa3e4ca73c4019b278230f54b9c920571384c96c746e27f0b844d443c1fe0abb

do_install() {
    vmkdir usr/share/shim
    vinstall boot/efi/EFI/fedora/shimx64.efi 0644 usr/share/shim
    vinstall boot/efi/EFI/fedora/mmx64.efi 0644 usr/share/shim
    vinstall boot/efi/EFI/BOOT/fbx64.efi 0644 usr/share/shim
    vinstall boot/efi/EFI/BOOT/MokManager.efi 0644 usr/share/shim
}
